<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2F3840"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".tracker.navigation.StatisticsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="9dp"
                android:layout_marginTop="25dp"
                android:fontFamily="sans-serif-medium"
                android:text="Past 7 days"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />

            <View
                android:id="@+id/view"
                android:layout_width="330dp"
                android:layout_height="0.1sp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@color/colorBottomNavSeparator" />

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/mood_chart"
                android:layout_width="match_parent"
                android:layout_height="450dp"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="2dp" />

            <TextView
                android:id="@+id/textView36"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="INDEX:"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView29"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Happy[6] Moderate[5] Scared[4] Angry[3] Sad[2] Happy[1]"
                android:textColor="#FFFFFF" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>